{
  "name": "mvd-app",
  "version": "1.0.0",
  "description": "Máquina Virtual Didática (Flask + Electron)",
  "author": "Lenda",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.lenda.mvd",
    "productName": "MVD Virtual Machine",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      },
      {
        "from": "../frontend",
        "to": "frontend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^25.0.0"
  }
}
